<!doctype html>
<html lang="fr">
  <!-- En haut -->
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>
        {% block title %}
            Prostages
        {% endblock %}
    </title>

        <!--Bloc de CSS -->
        {% block stylesheets %}
            <!-- Bootstrap CSS -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
        {% endblock %}

        {% block javascripts %}
            
        {% endblock %}

  </head>

  <!-- Partie principale -->
  <body style="background-color:#EED6D3;">
    <div class = "container">
        {% block menu %}
            <h1>------- MENU -------</h1>
            <div class="row" style="background-color:#67595E; border:2px solid #67595E">
                <!-- BLOC ACCUEIL MENU -->
                    <div class = "col" style="text-align:center;">
                        <a class="link" href="{{path('pro_stage_accueil')}}" style="color:white; text-decoration:none">Accueil </a>
                    </div>

                <!-- BLOC ENTREPRISES MENU -->
                    <div class = "col" style="text-align:center;">
                        <a class="link" href="{{path('pro_stage_entreprises')}}" style="color:white; text-decoration:none">Entreprises </a>
                    </div>

                <!-- BLOC FORMATIONS MENU -->
                    <div class = "col" style="text-align:center;">
                        <a class="link" href="{{path('pro_stage_formations')}}" style="color:white; text-decoration:none">Formations </a>
                    </div>
            </div>
        {% endblock %}

        {% block contenu %}
            <h1>------- CONTENU -------</h1>
        {% endblock %}

        {% block footer %}
            <h1>------- FOOTER -------</h1>
        {% endblock %}

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
