{% extends 'base.html.twig' %}

{% block title %}Page formations{% endblock %}

{% block contenu %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Cette page affichera la liste des formations de l'IUT</h1>
    {% for formationCourante in formations %}
        <a class="link" href="{{path('pro_stage_formations', {id:formationCourante.id})}}">
            <div class="card">
                <h3 class="card-title"> {{formationCourante.nomLong }}</h3> 
            </div>
        </a>
    {% endfor %}
</div>
{% endblock %}
