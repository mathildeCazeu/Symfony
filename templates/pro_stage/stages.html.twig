{% extends 'base.html.twig' %}

{% block title %}Page Stages{% endblock %}

{% block contenu %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

        <h1>Titre : {{stage.titre}}</h1>
        <br>

        <h2>Profil recherché : {% for formation in formations %} {{formation.nomCourt}} {% endfor %} </h2>

        <br>
        <h2>Mission du stage: </h2>
        <h2> {{stage.Mission}} </h2>
        <br>
        <h2>Informations sur l'entreprise</h2>
        <h3> Nom : {{entreprise.nom}} </h3>
        <h3> Adresse : {{entreprise.adresse}} </h3>
        <h3> Activité : {{entreprise.activite}} </h3>
        <h3> Site Web : {{entreprise.siteWeb}}
        <h3> Contact de l'entreprise : {{stage.email}}</h3>



</div>
{% endblock %}
