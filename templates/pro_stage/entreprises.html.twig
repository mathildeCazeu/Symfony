{% extends 'base.html.twig' %}

{% block title %}Page entreprises{% endblock %}

{% block contenu %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des entreprises proposant un stage</h1>
    {% for entrepriseCourante in entreprises %}
        <a class="link" href="{{path('pro_stage_stagesParEntreprise', {id:entrepriseCourante.id})}}">
            <div class="card">
                <h4 class="card-title"> {{ entrepriseCourante.nom}} </h4> </a> 
                <p  class="cart-text">
                    {{entrepriseCourante.adresse}}
                </p>
            </div>
    {% endfor %}
</div>
{% endblock %}
