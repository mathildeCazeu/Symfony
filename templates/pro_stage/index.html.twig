{% extends 'base.html.twig' %}

{% block title %}Prostages{% endblock %}

{% block contenu %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des stages propos√©s</h1>
    <p>
        Vous trouverez ci-dessous la liste des entreprises proposant un stage:
    </p>
    <div class="card bg-colour">
        {% for stageCourant in stages %}
            <div class="card-header">
                <h3 class="card-title"> {{stageCourant.Entreprises.nom}}</h3>
            </div>
            <div class="card-body">
                <h4 class="card-subtitle"> {{stageCourant.titre}}  </h4>
                {% for formationCourante in stageCourant.formations %} 
                    <h4 class="card-subtitle"> {{formationCourante.nomLong}}</h4>
                {% endfor %}
            </div>
            <div class="card-footer">
                <a class="link" href="{{path('pro_stage_stages', {id:stageCourant.id})}}">
                    Lien vers le stage
                </a>

            </div>
            
        {% endfor %}
    </div>
</div>



{% endblock %}

{% block footer %}
{% endblock %}